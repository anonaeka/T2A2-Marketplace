<p id="notice"><%= notice %></p>

<p>
  <p>
  <strong>Image:</strong>
  </p>
  <% if @product.image.attached? %>
    <%= image_tag @product.image, crop: :scale, width: 500 %>
    <% else %>
    No Image
  <% end %>
</p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>

<%= link_to 'Edit', edit_product_path(@product), class: "btn btn-link" %> |
