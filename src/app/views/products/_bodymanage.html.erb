<br>
<div class="center">
<div class="row">
<% @products.each do |product| %>
    <div class="col-md-3 col-sm-6 col-xs-12">
    <div class="card">
    <div class="card-header">
    Product
    </div>
        <div class="card-body">
        <% if product.image.url %>
        <img src= <%= product.image.url %> width="100%">
        <% else %>
        <img src="https://res.cloudinary.com/ddqegwuzs/image/upload/v1621830575/Noimage_zgaeta.png" alt="" width="70%">
        <% end %>
        </p>
            <h3><%= product.name %></h3>
            <p><%= product.description %></p>
            <p><%= number_to_currency (product.price) %></p>
                <%= link_to 'Edit', edit_product_path(product), class: "btn btn-warning" %>
                <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
        </div>
    </div>
    </div>
<% end %>
</div>
</div>
<br>
<%= link_to 'New Product', new_product_path, class: "btn btn-success" %>
<%= link_to 'Back', products_path, class: "btn btn-warning" %>