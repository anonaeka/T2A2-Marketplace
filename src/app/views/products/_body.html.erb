<div class="center">
<div class="row">
<% @products.each do |product| %>
    <div class="col-md-3 col-sm-6 col-xs-12">
    <div class="card">
    <div class="card-header">
    Product
    </div>
        <div class="card-body">
        <% if product.image.url %>
        <img src= <%= product.image.url(:width=>250, :crop=>"fill") %>>
        <% else %>
        <img src="https://res.cloudinary.com/ddqegwuzs/image/upload/v1621830575/Noimage_zgaeta.png" alt="" width="250">
        <% end %>
            <h3><%= product.name %></h3>
            <p><%= number_to_currency (product.price) %></p>
            <p><%= "By #{product.user.name}" %></p>
            <%= link_to 'Detail', product, class: "btn btn-primary" %>
        </div>
    </div>
    </div>
<% end %>
</div>
</div>
<br>

<% if user_signed_in? %>
    <%= link_to 'New Product', new_product_path, class: "btn btn-success" %>
<% end %>