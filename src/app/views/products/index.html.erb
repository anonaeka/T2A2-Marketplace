<p id="notice"><%= notice %></p>
<%= render 'header' %>

<h1>Products</h1>

<div class="center">
<div class="row">
  <% @products.each do |product| %>
    <div class="col-md-3 col-sm-6 col-xs-12">
      <div class="card">
      <div class="card-header">
      Product
      </div>
        <img src= <%= product.image.url(:width=>250, :crop=>"fill") %>>
          <div class="card-body">
            <h3><%= product.name %></h3>
              <p><%= product.description %></p>
              <p><%= number_to_currency (product.price) %></p>
              <p><%= "By #{product.user.name}" %></p>
                <%= link_to 'Show', product, class: "btn btn-primary" %>
                <%= link_to 'Edit', edit_product_path(product), class: "btn btn-warning" %>
                <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
          </div>
      </div>
    </div>
  <% end %>
</div>
</div>

<br>

<%= link_to 'New Product', new_product_path, class: "btn btn-success" %>
