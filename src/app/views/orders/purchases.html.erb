<div class="center">
    <h2>Purchase History</h2>
</div>

    <div class="table-responsive">
    <table class="table table-striped table-hover">
    <tr>
        <th class="center">Image</th>
        <th class="center">Product</th>
        <th class="center">Price</th>
        <th class="center">Customer</th>
        <th class="center">Date Purchased</th>
    </tr>

    <% @orders.each do |order| %>
        <tr>
        <td class="center">
        <% if order.product.image.url %>
            <img src= <%= order.product.image.url %> width="40%">
            <% else %>
            <img src="https://res.cloudinary.com/ddqegwuzs/image/upload/v1622048177/noimage_pzxizf.gif" alt="" width="40%">
        <% end %>
        </td>
        <td class="center"><%= order.product.name %></td>
        <td class="center"><%= number_to_currency(order.product.price) %></td>
        <td class="center"><%= order.seller.name %></td>
        <td class="center"><%= order.created_at.strftime("%B %-d, %Y") %></td>
        </tr>
    <% end %>
    </table>
    </div>
<br>
<div class="d-grid gap-2">
<%= link_to 'Back', products_path, class: "btn btn-outline-warning" %>
</div>
<br>
